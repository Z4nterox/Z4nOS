{
	"arrowParens": "always",
	"bracketSpacing": true,
	"endOfLine": "crlf",
	"importOrder": [
		"^next$",
		"^next/(.*)$",
		"^react$",
		"^react/(.*)$",
		"^[@]?[a-zA-Z0-9_/-]+$",
		"^@/components/(.*)$",
		"^@/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"printWidth": 140,
	"proseWrap": "preserve",
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "es5",
	"useTabs": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
